<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerVertical="true"
        android:padding="@dimen/_7sdp"
        android:tag="dw"
        app:srcCompat="@drawable/ic_back"
        tools:ignore="VectorDrawableCompat" />
    <LinearLayout
        android:id="@+id/rlmain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_margin="@dimen/_20sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="@dimen/_4sdp"
                card_view:cardElevation="@dimen/_2sdp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/otp_verify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableEnd="@drawable/ic_baseline_account_balance_wallet_24"
                            android:text="Please Collect"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textColor="#000"
                            android:drawableRight="@drawable/ic_baseline_account_balance_wallet_24" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/collect_cash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:textSize="@dimen/_50sdp"
                            android:textStyle="bold"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:textSize="@dimen/_50sdp"
                            android:background="@drawable/ic_baseline_check_circle_24"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="Thank You for using\n Chalo Chale Cab."
                            android:textSize="@dimen/_20sdp"
                            android:textColor="#000000"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="#8A8888"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_Cash"
                            android:background="#15DDF6"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:drawableRight="@drawable/ic_baseline_money_24"
                            android:layout_height="wrap_content"
                            android:text="Pay by\n Cash"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:textSize="@dimen/_20sdp"
                            android:textColor="#000000"/>
                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="#8A8888"/>
                        <TextView
                            android:id="@+id/tv_Online"
                            android:background="#15DDF6"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:drawableRight="@drawable/ic_baseline_payment_24"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_height="wrap_content"
                            android:text="Pay by\n Online"
                            android:textSize="@dimen/_20sdp"
                            android:textColor="#000000"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>