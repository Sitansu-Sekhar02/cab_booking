<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/cab"
        android:visibility="gone"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="false"
        android:src="@drawable/taxi_blue" />
    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="false"
        android:src="@drawable/taxi_blue" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:weightSum="7.0">

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
           android:layout_marginLeft="@dimen/_12sdp"
           android:layout_marginRight="@dimen/_12sdp"
           android:layout_marginTop="@dimen/_35sdp"
            android:layout_weight="1.5"
            android:paddingBottom="@dimen/_5sdp">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <androidx.cardview.widget.CardView
                   xmlns:card_view="http://schemas.android.com/apk/res-auto"
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:layout_margin="0dp"
                   card_view:cardCornerRadius="@dimen/_4sdp"
                   card_view:cardElevation="@dimen/_2sdp">

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginLeft="@dimen/_40sdp"
                       android:layout_marginRight="@dimen/_40sdp">

                       <View
                           android:id="@+id/view"
                           android:layout_width="match_parent"
                           android:layout_height="0.3dp"
                           android:layout_centerVertical="true"
                           android:layout_marginLeft="10dp"
                           android:background="#afafaf" />
                   </RelativeLayout>

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">


                       <ImageView
                           android:id="@+id/dot_dot_road"
                           android:layout_width="@dimen/_24sdp"
                           android:layout_height="@dimen/_24sdp"
                           android:layout_margin="@dimen/_10sdp"
                           android:layout_alignParentLeft="true"
                           android:layout_centerInParent="true"
                           android:background="@color/transparent"
                           android:scaleType="centerCrop"
                           card_view:srcCompat="@drawable/road_location"
                           tools:ignore="VectorDrawableCompat" />


                   </RelativeLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical">


                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1">

                           <EditText
                               android:id="@+id/mymLocation"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:background="#00ff0000"
                               android:ellipsize="end"
                               android:selectAllOnFocus="true"
                               android:singleLine="true"
                               android:gravity="left|center_vertical"
                               android:maxLines="1"
                               android:paddingLeft="@dimen/button_padding1"
                               android:hint="Your Location..."
                               android:textAllCaps="false" />

                           <ImageView
                               android:layout_margin="@dimen/_11sdp"
                               android:layout_width="@dimen/_20sdp"
                               android:layout_height="@dimen/_20sdp"
                               android:layout_marginLeft="@dimen/_78sdp"
                               android:layout_alignParentLeft="true"
                               android:layout_centerInParent="true"
                               android:layout_centerVertical="true"
                               android:background="@color/transparent"
                               android:scaleType="fitCenter"
                               card_view:srcCompat="@drawable/location_start"
                               tools:ignore="VectorDrawableCompat" />


                       </RelativeLayout>


                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1">


                           <EditText
                               android:id="@+id/dropoffLocation"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:background="#00ff0000"
                               android:ellipsize="end"
                               android:selectAllOnFocus="true"
                               android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                               android:singleLine="true"
                               android:gravity="left|center_vertical"
                               android:maxLines="1"
                               android:paddingLeft="@dimen/button_padding1"
                               android:hint="Your destination..." />

                           <ImageView
                               android:layout_width="@dimen/_24sdp"
                               android:layout_height="@dimen/_24sdp"
                               android:layout_margin="@dimen/_10sdp"
                               android:layout_alignParentLeft="true"
                               android:layout_centerInParent="true"
                               android:layout_centerVertical="true"
                               android:background="@color/transparent"
                               android:scaleType="fitCenter"
                               card_view:srcCompat="@drawable/location_end"
                               tools:ignore="VectorDrawableCompat" />
                       </RelativeLayout>
                   </LinearLayout>

               </androidx.cardview.widget.CardView>

           </RelativeLayout>

       </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:id="@+id/driver_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:visibility="gone"
                android:id="@+id/ride_now"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#615D5D"
                android:gravity="center"
                android:text="Show Rides"
                android:textColor="#FBD52B"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="@drawable/button_border"
        android:id="@+id/TaxiHorizontal"
        android:layout_above="@+id/driver_details"
        android:layout_alignParentBottom="false"
        android:layout_height="@dimen/_100sdp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/path"/>

    </RelativeLayout>

</RelativeLayout>

