<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="@dimen/_150sdp">
    <LinearLayout
        android:id="@+id/rlmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_4sdp">
        <RelativeLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lnrdate"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/cab_date"
                    android:text="Date :"
                    android:textColor="#000"
                    android:textSize="@dimen/_14sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/date"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:text="12.7.21,04.56"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/total_price"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_width="match_parent"
                    android:text="\u20B9 35"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="@dimen/_20sdp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/number"
                android:layout_below="@+id/lnrdate"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="User number: "
                    android:textColor="#000"
                    android:textSize="@dimen/_14sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/user_no"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:text="9511273873"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/number"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Payment Mode:"
                    android:textColor="#000"
                    android:textSize="@dimen/_14sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/payment_mode"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:text="online"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </RelativeLayout>
        <!--<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User number"
                />
        </LinearLayout>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="@dimen/_4sdp"
                card_view:cardElevation="@dimen/_2sdp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_40sdp">

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="#afafaf" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/dot_dot_road"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:background="@color/transparent"
                        android:scaleType="centerCrop"
                        card_view:srcCompat="@drawable/road_location"
                        tools:ignore="VectorDrawableCompat" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/source_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#00ff0000"
                            android:ellipsize="end"
                            android:selectAllOnFocus="true"
                            android:singleLine="true"
                            android:text="Suratwala mark plazzo"
                            android:gravity="left|center_vertical"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/button_padding1"
                            android:textAllCaps="false" />

                        <ImageView
                            android:layout_margin="@dimen/_11sdp"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_78sdp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:background="@color/transparent"
                            android:scaleType="fitCenter"
                            card_view:srcCompat="@drawable/location_start"
                            tools:ignore="VectorDrawableCompat" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/dest_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#00ff0000"
                            android:ellipsize="end"
                            android:selectAllOnFocus="true"
                            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                            android:singleLine="true"
                            android:text="Pune Station"
                            android:gravity="left|center_vertical"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/button_padding1" />

                        <ImageView
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:background="@color/transparent"
                            android:scaleType="fitCenter"
                            card_view:srcCompat="@drawable/location_end"
                            tools:ignore="VectorDrawableCompat" />
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </LinearLayout>
    <!-- <View
         android:layout_width="match_parent"
         android:background="#000"
         android:layout_height="@dimen/_1sdp"/>
 -->


</LinearLayout>