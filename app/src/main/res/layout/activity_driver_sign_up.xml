<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/walllogo">
    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_20sdp"
            android:layout_height="match_parent">


                <ImageView
                    android:layout_width="@dimen/_200sdp"
                    android:visibility="gone"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginBottom="@dimen/_30sdp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">


            <EditText
                android:id="@+id/editTextfirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/shapeesign"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="@dimen/_5sdp"
                android:inputType="text"
                android:hint="Enter name"
                android:padding="@dimen/_8sdp" />

            <EditText
                android:id="@+id/editTextLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/shapeesign"
                android:drawableLeft="@drawable/ic_baseline_contact_phone_24"
                android:drawablePadding="@dimen/_5sdp"
                android:inputType="text"
                android:hint="Enter contact number"
                android:padding="@dimen/_8sdp" />
            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/shapeesign"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_baseline_note_add"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Enter address"
                android:padding="@dimen/_10sdp" />
            <Button
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/shapeesign"
                android:drawableRight="@drawable/ic_baseline_file_copy_24"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Upload document"
                android:padding="@dimen/_5sdp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="*File should be. pdf,text,image type"
                        android:textColor="@color/black" />


            <Button
                android:id="@+id/buttonSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/shapesignup"
                android:padding="@dimen/_15sdp"
                android:shadowColor="@android:color/transparent"
                android:text="Submit"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/buttonLogin"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/shapelogin"
                android:padding="@dimen/_15sdp"
                android:shadowColor="@android:color/transparent"
                android:text="Log In" />
            </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvLoginButton"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvDontHaveAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/don_t_have_an_account"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/tvSignupbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvDontHaveAccount"
                        android:text=" Sign Up"
                        android:textStyle="bold"
                        android:textColor="#0861AF"
                        android:textSize="@dimen/_14sdp" />
                </RelativeLayout>
            </LinearLayout>




        </LinearLayout>

    </ScrollView>

</LinearLayout>