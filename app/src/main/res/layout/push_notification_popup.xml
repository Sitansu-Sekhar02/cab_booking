<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black_trans"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/rlmain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_20sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="@dimen/_4sdp"
                card_view:cardElevation="@dimen/_2sdp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/otp_verify"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Request for New Ride"
                            android:gravity="center"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold"
                            android:textColor="#000"/>
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From :"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                    <TextView
                        android:id="@+id/from_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textStyle="bold"
                        android:text="Laxmi Chowk,Hinjewadi"
                        android:textSize="@dimen/_15sdp"
                        android:singleLine="true"/>

                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To :"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold"
                            android:textColor="#000"/>
                        <TextView
                            android:id="@+id/to_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:text="Wakad Bridge,Wakad"
                            android:textSize="@dimen/_15sdp"
                            android:singleLine="true"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Number :"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold"
                            android:textColor="#000"/>
                        <TextView
                            android:id="@+id/user_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:text="9511273873"
                            android:textSize="@dimen/_15sdp"
                            android:singleLine="true"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="#AFADAD"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/accept_ride"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accept"
                            android:background="#77D50B"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:textColor="#F8F5F5"/>
                        <Button
                            android:id="@+id/cancel_ride"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FDFAFA"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textStyle="bold"
                            android:background="#F81F0F"
                            android:text="Decline"
                            android:textSize="@dimen/_15sdp"
                            android:singleLine="true"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </LinearLayout>
   <!-- <View
        android:layout_width="match_parent"
        android:background="#000"
        android:layout_height="@dimen/_1sdp"/>
-->


</LinearLayout>