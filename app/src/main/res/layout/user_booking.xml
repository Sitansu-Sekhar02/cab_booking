<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/driver_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0C0C0C"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/callDriver"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_baseline_add_ic_call_24" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:text="Call Driver"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>


            <View
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:id="@+id/cancelRide"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_baseline_cancel_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:text="Cancel Ride"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:id="@+id/shareRide"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_share_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:text="Share"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/button_border"
        android:id="@+id/TaxiHorizontal"
        android:layout_above="@+id/driver_details"
        android:layout_alignParentBottom="false"
        android:layout_height="@dimen/_100sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:src="@drawable/ic_baseline_person_pin_24" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="#000"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:textStyle="bold"
                            android:text="Amol Kharsade"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TATA Altroz"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MH12 AP3445"/>

                    </LinearLayout>


                </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

