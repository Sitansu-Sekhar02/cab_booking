<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.blucore.chalochale">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconfinal"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iconfinal"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <receiver android:name=".Driver.BroadcastReceiver"/>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name=".Activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.LoginActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name=".Driver.DriverMainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name=".Driver.DriverRouteActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name=".Activity.SignUpActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name=".Driver.PaymentDetails"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name=".Fragments.RazorpayActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name=".Driver.AcceptUserRideActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />

        <activity android:name=".Activity.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="rzp_test_QQugGpcm7Ryo6t" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <receiver android:name=".BroadCastReceiver.SmsReceiver" android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.auth.api.phone.SMS_RETRIEVED"/>
            </intent-filter>
        </receiver>

        <service android:name="com.blucore.chalochale.Driver.BackgroundLocationService"></service>


        <service android:name=".FirebaseClasses.MyCabFirebaseService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>